<%= form_with model: @recipe do |f| %>
    <% if @ingredient.errors.any? %>
        <div id="errors">
            <% @ingredient.errors.full_messages.each do |msg| %>
                <div class="alert"><%= msg %></div>
            <% end %>
        </div>
    <% end %>
    
    <%= render partial: "layouts/errors", locals: {record: @ingredient} %>

    <%= f.fields_for :ingredient do |i| %>
        <%= i.label :ingredient %>
        <%= i.text_field :name, placeholder: "Ingredient" %>
    <% end %>

<% end %>